@model Pizza
<div class="card">
    <div class="card-header">
        <div class="card-title">
            @Model.Name
        </div>
        <p class="card-subtitle">@Model.Price</p>
    </div>
    <div class="card-body">
        <div class="card text">
            <p>@Model.Ingredients</p>
        </div>
        <img class="card-img" src="@Model.ImageUrl"/>
    </div>
</div>
